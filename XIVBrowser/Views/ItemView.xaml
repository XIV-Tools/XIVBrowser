<mvm:View
	x:Class="XIVBrowser.Views.ItemView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:XIVBrowser.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:mvm="clr-namespace:Wpf.Mv;assembly=WpfMvm"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">

	<Grid x:Name="ItemArea">

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Image
			Grid.RowSpan="2"
			Grid.Column="0"
			Width="48"
			Height="48"
			Margin="3"
			Source="{Binding Item.Icon}" />

		<TextBlock
			Grid.Row="0"
			Grid.Column="1"
			Margin="3"
			Text="{Binding Item.Name}" />

		<TextBlock
			Grid.Row="1"
			Grid.Column="1"
			Margin="3"
			Text="{Binding Item.Description}" />

		<TextBlock
			Grid.Row="0"
			Grid.Column="2"
			Text="{Binding Item.FitsInSlots}" />

		<TextBlock
			Grid.Row="1"
			Grid.Column="2"
			Text="{Binding FilePath}" />

	</Grid>

</mvm:View>
