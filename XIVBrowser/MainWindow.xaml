<Window
	x:Class="XIVBrowser.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:XIVBrowser"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:views="clr-namespace:XIVBrowser.Views"
	Title="MainWindow"
	Width="800"
	Height="450"
	mc:Ignorable="d">
	<Grid x:Name="ContentArea">

		<TabControl>
			<TabItem Header="Items">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="256" />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>

					<views:ItemsView Grid.Column="0" SelectedItemChanged="OnSelectedItemChanged" />
					<views:ItemView x:Name="ItemView" Grid.Column="1" />

				</Grid>

			</TabItem>

			<TabItem Header="Explorer">
				<views:ExplorerView />
			</TabItem>
		</TabControl>

	</Grid>
</Window>
